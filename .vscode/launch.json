{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Test Ingest Lambda",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lambda/ingest/index.py",
            "console": "integratedTerminal",
            "env": {
                "TABLE_NAME": "log-entries",
                "AWS_DEFAULT_REGION": "eu-west-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local",
                "DYNAMODB_ENDPOINT": "http://localhost:8000"
            },
            "args": []
        },
        {
            "name": "Python: Test Read Recent Lambda",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/lambda/read_recent/index.py",
            "console": "integratedTerminal",
            "env": {
                "TABLE_NAME": "log-entries",
                "AWS_DEFAULT_REGION": "eu-west-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local",
                "DYNAMODB_ENDPOINT": "http://localhost:8000"
            },
            "args": []
        },
        {
            "name": "Python: Run Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "${workspaceFolder}/lambda",
                "-p",
                "test_*.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run Integration Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/integration_test.py",
            "console": "integratedTerminal",
            "env": {
                "AWS_DEFAULT_REGION": "eu-west-1",
                "AWS_ACCESS_KEY_ID": "local",
                "AWS_SECRET_ACCESS_KEY": "local"
            }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}

